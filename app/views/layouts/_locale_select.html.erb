<div id="locale-select">
  <% I18n.available_locales.sort{ |a,b| a.to_s <=> b.to_s }.each do |locale| %>
    <%= link_to(
      image_tag("flags/#{locale}.png",
        :title => I18n::Locales[locale],
        :alt => I18n::Locales[locale]
      ),
      url_for(:host => (Rails.env == "production" ? "#{locale}.bitcoin-central.net" : "#{locale}.app.localhost:3000" ), :controller => :application, :action => :change_lang, :return_url => request.fullpath)
      )
  %>
  <% end %>
</div>
